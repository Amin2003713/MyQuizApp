@using MyQuizApp.Domain.Users
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">MyQuizApp.Web</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                    </NavLink>
                </div>
                <AuthorizeView  Roles="@(UserRoles.Admin.ToString())" >
                    <Authorized Context="_">
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="/Admin/Quiz/ManageQuizzes">
                                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Manage Quizzes
                            </NavLink>
                        </div>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="/Admin/Quiz/AddQuizzes">
                                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Add Quiz
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>

                <AuthorizeView Roles="@(UserRoles.Student.ToString())">
                    <Authorized Context="_">

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/Student/Quiz/MyQuizzes">
                            <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> My Quizzes
                        </NavLink>
                    </div>

                    </Authorized>
                </AuthorizeView>


                <div class="nav-item px-3">
                    <a role="button" class="nav-link" @onclick="@(async () =>
                                                                {
                                                                    await AuthState.LogoutAsync();
                                                                    NavigationManager.NavigateTo("/login", replace: true);
                                                                })">
                        <span aria-hidden="true"></span> logout
                    </a>
                </div>

            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}